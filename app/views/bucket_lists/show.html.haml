%h2 My Amazing Bucket List

%ol
  - @activities.each do |activity|
    %li
      = render activity

%ul#destinations

#add-destination
  = form_for @destination do |f|
    %fieldset
      = f.label :name
      = f.text_field :name

    %fieldset
      = f.label :image_url, "Image URL"
      = f.text_field :image_url

    = f.submit "Add Destination", :id => "add-destination-button"